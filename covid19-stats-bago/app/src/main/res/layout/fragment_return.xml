<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/return_swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.returnstats.ReturnedPeopleFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/return_shimmerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:shimmer_color="#E0E0E0">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <gov.mm.covid19statsbago.mmfont.components.MMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="လုပ်ဆောင်နေပါသည်ခေတ္တခဏစောင့်ဆိုင်းပေးပါ"
                        android:textColor="#353434"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/group_bg_grey" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </io.supercharge.shimmerlayout.ShimmerLayout>

        <LinearLayout
            android:id="@+id/returnpeoplelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <gov.mm.covid19statsbago.mmfont.components.MMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="ပဲခူးတိုင်းဒေသကြီးအတွင်း COVID-19 နှင့်ပတ်သက်၍ ပြည်ပနိုင်ငံများမှ ပြန်လည်ရောက်ရှိလာသူများစာရင်း"
                android:textColor="#000000"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <gov.mm.covid19statsbago.mmfont.components.MMTextView
                    android:id="@+id/returngetalllist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="ALL Data"
                    android:textColor="#3949AB"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/ic_filter_list_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <gov.mm.covid19statsbago.mmfont.components.MMTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="ရက်ရွေးရန်"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <gov.mm.covid19statsbago.mmfont.components.MMTextView
                        android:id="@+id/returndatechoose"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/rounded_bg_background_date"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="00/00/0000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_date_range_black_24dp" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#E0E0E0" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.evrencoskun.tableview.TableView
                    android:id="@+id/returnpeople_table_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:column_header_height="80dp"
                    app:row_header_width="@dimen/table_view_row_header_width"
                    app:selected_color="@color/selected_background_color"
                    app:separator_color="@color/separator_color"
                    app:shadow_color="@color/shadow_background_color"
                    app:unselected_color="@color/unselected_background_color" />

                <gov.mm.covid19statsbago.ui.view.ComponentNoDataFound
                    android:id="@+id/empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>